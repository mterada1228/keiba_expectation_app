<div class="container comment-show-area">
  <div class="card">
    <div class="card-header">
      <%= @parent_comment.user_name %>
    </div>
    <div class="card-body">
      <p><%= @parent_comment.description %></p>
    </div>
  </div>
  <div> 
    <div class="card card-body">
      <%= form_for @new_comment, url: { action: 'create' } do |f| %>
        <div class="form-group comment-header-area">
          <%= f.text_field :user_name, class: 'form-control', placeholder: 'ニックネームを入力' %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <%= f.submit '返信を投稿する', class: 'btn btn-primary mb-2' %>
      <% end %>
    </div>
  </div>
</div>